{
  "name": "ccgate",
  "version": "2.0.0",
  "description": "高性能大模型服务反向代理 - 支持多租户管理、负载均衡、用量统计",
  "main": "server.js",
  "bin": {
    "ccgate": "server.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "echo \"Linting...\"",
    "clean": "rm -rf data/logs/* data/usage/*",
    "config:validate": "node -e \"require('./src/config').loadAllConfigs()\"",
    "health": "curl -s http://localhost:3000/health || echo 'Service not running'"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "proxy",
    "reverse-proxy",
    "api-gateway",
    "load-balancer",
    "ai",
    "llm",
    "claude",
    "multi-tenant",
    "usage-tracking",
    "api-proxy"
  ],
