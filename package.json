  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/ccgate.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/ccgate/issues"
  },
  "homepage": "https://github.com/your-username/ccgate#readme",
  "files": [
    "src/",
    "config/",
    "server.js",
    "README.md",
    ".env.example"
  ]
}